<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/topNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Once Collection Weekly"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginHorizontal="8dp" />

        <ImageView
            android:id="@+id/likeButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_like"
            android:contentDescription="Like" />

        <ImageView
            android:id="@+id/shareIconButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_share"
            android:contentDescription="Share"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/cartButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_cart"
            android:contentDescription="Cart"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topNavigationBar"
        android:layout_above="@id/bottomBar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imageViewPager"
                android:layout_width="match_parent"
                android:layout_height="340dp" />

            <LinearLayout
                android:id="@+id/dotIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/brandName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/productSku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color:"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_marginTop="18dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/colorRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_text"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:textColor="#000000"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/decrementButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="-"
                    android:backgroundTint="#A9A9A9"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:includeFontPadding="false" />

                <TextView
                    android:id="@+id/quantityText"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="8dp" />

                <Button
                    android:id="@+id/incrementButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="+"
                    android:backgroundTint="#000000"
                    android:textColor="@color/white"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRODUCT INFORMATION"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:elevation="4dp">

        <Button
            android:id="@+id/addToBagButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Add to bag"
            android:background="@drawable/button_black_bg"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Share"
            android:background="@drawable/button_white_bg"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>
    </LinearLayout>
</RelativeLayout>